{
    "name": "php-core/laravel-madeline-proto",
    "description": "A third party Telegram client library danog/MadelineProto wrapper for Laravel",
    "type": "library",
    "license": "AGPL-3.0-only",
    "authors": [
        {
            "name": "PHPCore",
            "email": "dev@php-core.com"
        },
        {
            "name": "Setiawan Hu",
            "email": "setiawanhu@gmail.com"
        }
    ],
    "keywords": [
        "laravel",
        "telegram",
        "madeline-proto"
    ],
    "require": {
        "php": "^8.4",
        "danog/madelineproto": "^8.6",
        "illuminate/support": "*",
        "illuminate/console": "*",
        "illuminate/database": "*"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "orchestra/testbench": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "PHPCore\\MadelineProto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPCore\\MadelineProto\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PHPCore\\MadelineProto\\MadelineProtoServiceProvider"
            ]
        }
    }
}
